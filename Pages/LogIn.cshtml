@page
@model UniversityApp.Pages.LogInModel
@{
    ViewData["Title"] = "Login";
}
<h2>Login</h2>

<link rel="stylesheet" href="~/css/login.css" />

<div class="login-container">
    <div class="login-card">
        <h3 class="login-title">University Login</h3>

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input asp-for="Username" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger text-center">
                    @Model.ErrorMessage
                </div>
            }

            <button type="submit" class="btn btn-primary login-button">
                Login
            </button>

            <div class="register-container" style="margin-top: 15px; text-align:center;">
                <a asp-page="StudentRegister" class="btn btn-success login-button">
                    Register as Student
                </a>
            </div>
        </form>
    </div>
</div>